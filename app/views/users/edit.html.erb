<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <h2 class="font-weight-bold mt-3">プロフィールを編集する</h2>
        <%= form_with model:@user do |f| %>
          <div class="my-3">
            <%= f.label :image, "プロフィール画像" %><br>
            <%= f.file_field :image %>
          </div>
          <div class="my-3">
            <%= f.label :name, "名前" %><br>
            <%= f.text_field :name, placeholder: "名前を入力してください", class: "w-100" %>
          </div>
          <div class="my-3">
            <%= f.label :email, "メールアドレス" %><br>
            <%= f.text_field :email, placeholder: "メールアドレスを入力してください", class: "w-100" %>
          </div>
          <div class="my-3">
            <%= f.label :introduction, "紹介文" %><br>
            <%= f.text_area :introduction, rows: "10", placeholder: "あなたの紹介文を入力してください", class: "w-100 h-100" %>
          </div>
          <div class="mt-5">
            <%= f.submit "修正", class: "w-100 btn btn-outline-info" %>
          </div>
        <% end %>
    </div>
  </div>
</div>


