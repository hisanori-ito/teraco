<h1>Users#show</h1>

<% if @user.image? %>
  profile:<%= image_tag @user.image.url %>
<% else %>
  profile:<%= image_tag "happy-faces-ga935fda3d_640.png"%>
<% end %>

<%= @user.name %>
<%= @user.introduction %>
<%= @user.email %>

<% @posts.each do |post| %>
  <p>title:<%= post.title %></p>
  <p>content:<%= post.content %></p>
<% end %>

<% if @user != current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
<% end %>

<% if @user == current_user %>
  <%= link_to "ブックマーク一覧", user_bookmarks_path(@user) %>
  <%= link_to "いいね一覧", user_favorites_path(@user) %>
  <%= link_to "フォロー確認", user_follows_path(@user) %>
  <%= link_to "👕編集する", edit_user_path(@user) %>
  <%= link_to "😢退会する", user_registration_path, method: :delete, data: { confirm: '本当に退会しますか？あなたの記事は全て消えてしまいます！' } %>
<% end %>