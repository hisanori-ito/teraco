<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="font-weight-bold mt-3">ブックマークした記事</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <% if @user == current_user %>
        <% if @bookmarks.count == 0 %>
          ブックマークした記事はありません😔
        <% else %>
          <%= render "bookmarks/index", { bookmarks: @bookmarks } %>
        <% end %>
      <% else %>
        <%= link_to user_path(@user.id) do %>
            <p>マイページへ戻る</p>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
