<div class="mt-3">
  <%= form_with model: [post, comment], local:false do |f| %>
    <div>
      <%= f.rich_text_area :comment, class: "w-100 h-100", rows: "3", placeholder: "コメントを入力してください" %>
    </div>
    <div class="mt-2 text-right">
      <%= f.submit "📮コメント" , class: "btn btn-outline-info" %>
    </div>
  <% end %>
</div>