<div class="border-left border-info pl-3">
  <% post.comments.each do |comment| %>
    <%= link_to user_path(comment.user) do %>
      <%= comment.user.name %>
    <% end %>さん | <%= comment.created_at.strftime('%Y/%m/%d') %><br>
    <%= comment.comment %><br>
    <% if comment.user == current_user %>
      <%= link_to "コメントを削除する", post_comment_path(comment.post, comment), remote:true, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger mt-1 mb-3" %><br>
    <% end %>
  <% end %>
</div>