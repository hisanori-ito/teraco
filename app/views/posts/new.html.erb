<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <h2 class="font-weight-bold mt-3">記事を書く</h2>
        <%= form_with model:@post do |f| %>
          <div class="my-3">
            <%= f.label :title, "title" %><br>
            <%= f.text_field :title, placeholder: "記事のタイトル", class: "w-100" %>
          </div>
          <div class="my-3">
            <%= f.label :thumbnail, "thumbnail" %><br>
            <%= f.file_field :thumbnail %>
          </div>
          <div class="my-3">
            <%= f.label :video, "video" %><br>
            <%= f.file_field :video %>
          </div>
          <div class="my-3">
            <%= f.label :content, "content" %><br>
            <%= f.text_area :content, rows: "10", placeholder: "記事の内容", class: "w-100 h-100" %>
          </div>
          <div class="my-3">
            <%= f.label :tags, "tags" %><br>
            <%= f.text_field :tag, placeholder: 'タグをつけるときは","でくぎってください', class: "w-100" %>
          </div>
          <div class="mt-5">
            <%= f.submit "投稿", class: "w-100 btn btn-outline-info" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
