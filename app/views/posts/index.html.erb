<h1>記事一覧</h1>

<% @tags.each do |tag| %>
  <%= link_to tag.name, search_tag_path(tag_id: tag.id) %>
  <%= "(#{tag.posts.count})" %>
<% end %>

<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= f.text_field :word, value: @word %>
  <%= f.submit "検索" %>
<% end %>

<% @posts.each do |post| %>
  <p>title:
    <%= link_to post_path(post.id) do %>
      <%= post.title %>
    <% end %>
  </p>
  
  🏷<%= post.tags.map(&:name).join(', ') %>

  💬<%= post.comments.count %>

  ❤️<%= post.favorites.count %>

  📚<%= post.bookmarks.count %>

  <% if post.thumbnail? %>
    <p>thmbnail:<%= image_tag post.thumbnail.url %></p>
  <% end %>

  <% if post.video? %>
    <p>video:<%= video_tag(post.video.to_s, :controls => true) %></p>
  <% end %>
<div>
  <p>content:<%= post.content.truncate(5) %>
    <% if post.content.size >= 5 %>
      <%= link_to post_path(post.id) do %>
         <p>続きを読む</p>
      <% end %>
    <% end %>
  </p>
</div>

<% end %>

