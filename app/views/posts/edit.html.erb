<div class="container">
  <%= render "posts/error", post: @post %>
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <%= form_with model:@post do |f| %>
        <div class="my-3">
          <%= f.label :title, "タイトル" %><br>
          <%= f.text_field :title, placeholder: "記事のタイトルを決めましょう！", class: "w-100" %>
        </div>
        <div class="my-3">
          <%= f.label :thumbnail, "サムネイル画像" %><br>
          <%= f.file_field :thumbnail, id: :file %>
        </div>
        <div>
          <% if @post.thumbnail.present? %>
            <%= image_tag @post.thumbnail.url, id: :prev, class: "border rounded" %>
          <% else %>
            <%= image_tag "kids-g837321511_640.png", id: :prev, class: "border rounded" %>
          <% end %>
        </div>
        <div class="my-3">
          <%= f.label :video, "動画" %><br>
          <%= f.file_field :video, id: :file_video %>
        </div>
        <div id="prev_video" >
          <% if @post.video.present? %>
            <%= video_tag(@post.video.to_s, :controls => true, class: "border rounded" ) %>
          <% end %>
        </div>
        <div class="my-3">
          <%= f.label :content, "記事の内容" %><br>
          <%= f.text_area :content, rows: "10", placeholder: "記事の内容を入力してください！", class: "w-100 h-100" %>
        </div>
        <div class="my-3">
          <%= f.label :tags, "タグ" %><br>
          <%= f.text_field :tag, value: @tags, placeholder: 'タグをつけるときは","でくぎってください', class: "w-100" %>
        </div>
        <div class="mt-5">
          <%= f.submit "記事を修正する！", class: "w-100 btn btn-outline-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
