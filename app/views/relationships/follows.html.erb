<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="font-weight-bold mt-3">フォロー</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <% if @users.exists? %>
        <%= render "users/index", { users: @users } %>
        <%= paginate(@users) %>
      <% else %>
        <p class="mt-3 text-center">フォローしているユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>