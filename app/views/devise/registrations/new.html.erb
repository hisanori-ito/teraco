<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="font-weight-bold mt-4">新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center ">
      <%= form_with model:@user, url:user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field mt-4">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, class: "border border-info rounded-pill"  %>
        </div>
      
        <div class="field mt-4">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "border border-info rounded-pill" %>
        </div>
      
        <div class="field mt-4">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "border border-info rounded-pill" %>
        </div>
      
        <div class="field mt-4">
          <%= f.label :password_confirmation, "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-info rounded-pill" %>
        </div>
      
        <div class="actions mt-5 mb-3">
          <%= f.submit "登録！", class: "btn btn-outline-info" %>
        </div>
      <% end %>
      
      <%#= render "devise/shared/links" %>

    </div>
  </div>
</div>
